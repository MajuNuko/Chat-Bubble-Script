wait(1)

game:GetService("StarterGui"):SetCore("SendNotification",{
	Title = "JailBirdhacks", -- Required
	Text = "When Using this Script When U die ReExecute The script It causes No Fps Drops", -- Required
    Icon = "rbxassetid://17849728202";
})
local function createChatBubble(player, message)
    local chatBubble = Instance.new("BillboardGui")
    chatBubble.Parent = player.Character.Head
    chatBubble.Size = UDim2.new(0, 100, 0, 40)
    chatBubble.StudsOffset = Vector3.new(0, 3, 0)

    local chatText = Instance.new("TextLabel")
    chatText.Parent = chatBubble
    chatText.Size = UDim2.new(1, 0, 1, 0)
    chatText.Text = message
    chatText.TextColor3 = Color3.new(1, 1, 1)
    chatText.BackgroundTransparency = 1
    chatText.TextScaled = true

    -- Rainbow effect for the chat bubble text
    local hue = 0
    while wait(0.1) do
        hue = (hue + 0.02) % 1
        chatText.TextColor3 = Color3.fromHSV(hue, 1, 1)
    end
end

-- Example: Force a player to say "⭐JailBirdHacks⭐" in a rainbow chat bubble
local player = game.Players:GetPlayers()[1]
createChatBubble(player, "⭐JailBirdHacks⭐")
